<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/Mifflin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <android.support.v7.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="405dp"
            android:layout_height="308dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="189dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:context=".MainActivity"
            tools:visibility="visible">

            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pick_gender" />

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/male"
                app:layout_column="1"
                app:layout_row="1" />

            <RadioButton
                android:id="@+id/radiofemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/female"
                app:layout_column="0"
                app:layout_row="1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age"
                app:layout_column="0"
                app:layout_row="2" />

            <EditText
                android:id="@+id/Age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:ems="10"
                android:hint="@string/age"
                android:inputType="numberDecimal"
                android:maxLength="6"
                app:layout_columnSpan="1"
                app:layout_gravity="fill_horizontal" />

            <TextView
                android:id="@+id/height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_height"
                app:layout_column="0"
                app:layout_row="3" />

            <EditText
                android:id="@+id/heightEditMiffin"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:ems="10"
                android:hint="@string/enter_height"
                android:inputType="numberDecimal"
                android:maxLength="6"
                app:layout_column="1"
                app:layout_columnSpan="1"
                app:layout_gravity="fill_horizontal"
                app:layout_row="3" />

            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_weight"
                app:layout_column="0"
                app:layout_row="4" />

            <EditText
                android:id="@+id/weightEditMiffin"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:ems="10"
                android:hint="@string/enter_weight"
                android:inputType="numberDecimal"
                android:maxLength="6"
                app:layout_column="1"
                app:layout_columnSpan="1"
                app:layout_gravity="fill_horizontal"
                app:layout_row="4" />

            <TextView
                android:id="@+id/caloriesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calories"
                app:layout_column="0"
                app:layout_columnSpan="1"
                app:layout_row="5" />

            <TextView
                android:id="@+id/calories"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/calories"
                android:maxLength="6"
                app:layout_column="1"
                app:layout_columnSpan="1"
                app:layout_gravity="fill_horizontal"
                app:layout_row="5" />

        </android.support.v7.widget.GridLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="251dp"
            android:layout_height="329dp"
            android:layout_marginStart="91dp"
            android:layout_marginEnd="69dp"
            android:layout_marginBottom="93dp"
            android:adjustViewBounds="true"
            android:maxWidth="42dp"
            android:maxHeight="42dp"
            android:scaleType="fitCenter"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout"
            app:srcCompat="@drawable/pizza"
            android:contentDescription="TODO" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp"
        tools:visibility="visible">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="189dp"
            android:layout_marginTop="16dp"
            android:text="@string/title_home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/henlo" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/bmi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <android.support.v7.widget.GridLayout

            android:layout_width="379dp"
            android:layout_height="418dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="124dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="189dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".MainActivity"
            tools:visibility="visible">

            <EditText
                android:id="@+id/heightEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:ems="10"
                android:hint="@string/enter_height"
                android:inputType="numberDecimal"
                android:maxLength="6"
                app:layout_columnSpan="2"
                app:layout_gravity="fill_horizontal" />

            <TextView
                android:id="@+id/heightTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="12dp"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_gravity="fill_horizontal"
                app:layout_row="0" />

            <EditText
                android:id="@+id/weightEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:ems="10"
                android:hint="@string/enter_weight"
                android:inputType="number|numberDecimal"
                android:maxLength="6"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_gravity="fill_horizontal"
                app:layout_row="1" />

            <TextView
                android:id="@+id/weightTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="12dp"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_gravity="fill_horizontal"
                app:layout_row="1" />

            <TextView
                android:id="@+id/tipLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bmi"
                app:layout_column="0"
                app:layout_gravity="right"
                app:layout_row="2" />

            <TextView
                android:id="@+id/bmiTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:text="@string/bmi"
                app:layout_column="1"
                app:layout_gravity="fill_horizontal"
                app:layout_row="2" />

            <TextView
                android:id="@+id/categoryLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                app:layout_column="0"
                app:layout_gravity="right"
                app:layout_row="3" />

            <TextView
                android:id="@+id/categoryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:text="@string/urcategory"
                app:layout_column="1"
                app:layout_gravity="fill_horizontal"
                app:layout_row="3" />

        </android.support.v7.widget.GridLayout>

    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="@+id/welcome"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu"/>


</android.support.constraint.ConstraintLayout>